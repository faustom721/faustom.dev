---
const { title, description, tags } = Astro.props;
---

<div
  class='relative flex items-center justify-between md:justify-normal md:odd:flex-row-reverse group'
>
  <div
    class='flex items-center justify-center w-10 h-10 rounded-full border-2 border-indigo-600/20 bg-zinc-50 shrink-0
      md:order-1 md:group-odd:-translate-x-1/2 md:group-even:translate-x-1/2 text-gray-600
      group-hover:scale-110 transition-all duration-200'
  >
    <svg
      xmlns='http://www.w3.org/2000/svg'
      fill='none'
      viewBox='0 0 24 24'
      stroke-width='1.5'
      stroke='currentColor'
      class='size-6'
    >
      <path
        stroke-linecap='round'
        stroke-linejoin='round'
        d='M15.042 21.672 13.684 16.6m0 0-2.51 2.225.569-9.47 5.227 7.917-3.286-.672ZM12 2.25V4.5m5.834.166-1.591 1.591M20.25 10.5H18M7.757 14.743l-1.59 1.59M6 10.5H3.75m4.007-4.243-1.59-1.59'
      ></path>
    </svg>
  </div>
  <div
    class='w-[calc(100%-4rem)] md:w-[calc(50%-2.5rem)] p-4 rounded-md border-2 border-indigo-600/20 hover:shadow-lg hover:scale-110 trasition-all duration-200'
  >
    <div class='flex items-center justify-between space-x-2 mb-1'>
      <div class='font-bold text-gray-800 text-lg'>{title}</div>
    </div>
    <div class='text-gray-600'>{description}</div>
    <div class='flex flex-wrap mt-2'>
      {
        tags.map((tag: string) => (
          <span class='inline-block bg-indigo-100 text-gray-800 text-xs font-semibold mr-2 my-1 px-2 py-0.5'>
            {tag}
          </span>
        ))
      }
    </div>
  </div>
</div>
