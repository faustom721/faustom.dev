---
import Button from './Button.astro';
const { title, description, image } = Astro.props;
---

<a
  class='p-8 max-w-md border-2 border-indigo-600/20 rounded-2xl flex flex-col items-center m-10
    transition-all duration-300 hover:-rotate-1 hover:shadow-lg'
  href='#'
>
  <img
    src='https://loremflickr.com/800/600/girl'
    class='shadow rounded-lg overflow-hidden border'
    loading='lazy'
  />
  <div class='mt-8'>
    <h4 class='font-bold text-xl'>{title}</h4>
    <p class='mt-2 text-gray-600'>
      {description}
    </p>
    <div class='mt-5'>
      <Button text='View Project' />
    </div>
  </div>
</a>
