---
const {
  text,
  href,
  class: className = '',
  target,
  type = 'button',
  ...props
} = Astro.props;

const Tag = href ? 'a' : 'button';
const tagProps = href ? { href, target, ...props } : { type, ...props };
---

<Tag
  {...tagProps}
  class={`inline-flex items-center rounded-md bg-indigo-900 px-3 py-2 text-sm font-medium leading-4 text-white hover:bg-indigo-900 duration-200 transition-all ${className}`}
>
  {text}
</Tag>
