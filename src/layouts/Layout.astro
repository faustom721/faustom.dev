---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div
  class="absolute inset-0 h-full w-full bg-zinc-950 bg-[linear-gradient(to_right,#27272a,transparent_1px),linear-gradient(to_bottom,#27272a,transparent_1px)] bg-[size:24px_24px]"
></div>
    <slot />
  </body>
</html>
